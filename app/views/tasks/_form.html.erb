<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <!-- <%= f.text_field :user_id,value:@user %>-->
  <%= f.hidden_field :project_id,value:@project %> 
  <!-- <%= f.hidden_field :project_user_id ,value:@project%> -->
  <!-- <div class="field">
    <%= f.label :project_id %><br>
    
    
  </div> -->
  <%dropdown_options = {"progress" => "Progress", "pending" => "Pending", "done" => "Done"}%>
  <div class="field">
    <%= f.label :status %><br>
    <%= f.collection_select :status, dropdown_options, :first, :last %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
